package assignment;

import processing.core.PApplet;
import java.awt.Color;

public class H_Snake extends Obj 
{
	static PApplet papplet;

	public H_Snake(float startx, float starty)
	{
		 super(papplet, startx, starty);
	}

	@Override
	void position() 
	{
		
	}

	@Override
	void thing() 
	{
	    papplet.pushMatrix();
	    papplet.translate(pos.x, pos.y);
	    papplet.stroke(c);
	    papplet.fill(c);
	    papplet.rect(0, 0, w, h);
	    papplet.popMatrix();
	    
	    papplet.stroke(250, 30, 10);
	    papplet.fill(250, 30, 10);
	    papplet.rect(foodx, foody, w, w);
		
	}
	
	public static void main(String[] args) 
	{
		String[] a = {"MAIN"};
		PApplet.runSketch(a, new Menu());

	}

}
